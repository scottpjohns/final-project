<h1>
  Story list
</h1>

<hr>

<table>
  <tr>

    <th>
      Name of story 
    </th>

    <th>
      Author
    </th>

    <th>
      Theme
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @stories.each do |story| %>
  <tr>

  
    <td>
      <a href = "<%= story.file_url %>" target="_blank"> 
        <%= story.name %> 
      </a>
    </td>

    <td>
      <%= story.author_name %>
    </td>

    <td>
      <%= story.prompt %>
    </td>

    <td>
      <%= time_ago_in_words(story.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(story.updated_at) %> ago
    </td>

    <td>
      <a href="/stories/<%= story.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
