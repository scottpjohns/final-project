<h1>
  Add a new comment
</h1>

<hr>

<%= render("comment_templates/validation_failures.html.erb") %>

<form action="/insert_comment_record" method="post">
  <div>
    <label for="text">
      Text
    </label>

    <input type="text" id="text" name="text" value="<%= @comment.text %>">
  </div>

  <div>
    <label for="commenter_id">Your username should appear below</label>
    <select id="commenter_id" >
      <% User.all.order({ :username => :asc }).each do |z_username| %>
      <option value="<%= z_username.id %>">
       <%= z_username.username %>
      </option>
      <% end %>
    </select>

    <!--<input type="text" id="commenter_id" name="commenter_id" value="<%= @comment.commenter_id %>">-->
  </div>

  <div>
    <label for="story_id">Story</label>
    <select name="story_id" >
      <% Story.all.order({ :name => :asc }).each do |a_story_name| %>
      <option value="<%= a_story_name.id %>">
        <%= a_story_name.name %>
      </option>
      <% end %>
    </select>

  </div>

  <button>
    Create comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
